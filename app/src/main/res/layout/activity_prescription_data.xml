<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:context=".PrescriptionDataActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/btn"
        android:layout_margin="5dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:layout_gravity="center"
            android:textColor="#00509d"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:text="Date:04/01/2020 10:07 am"
            android:textSize="14sp"/>
        <TextView
            android:id="@+id/tvNextDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:textColor="#f20200"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:text="Next Meet:2020-12-31"
            android:textSize="14sp"/>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:fontFamily="serif"
        android:textColor="#00509d"
        android:textStyle="bold"
        android:text="Problems"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/tvProblem"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="5dp"
        android:background="@drawable/btn"
        android:fontFamily="serif"
        android:gravity="center"
        android:textStyle="bold"
        android:padding="5dp"
        android:textColor="#000"
        android:text="sdvdsfvdf dfvdfvdfvdfvdfvd"
        android:textSize="14sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:fontFamily="serif"
        android:textColor="#00509d"
        android:textStyle="bold"
        android:text="Advise"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/tvAdvise"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="5dp"
        android:background="@drawable/btn"
        android:fontFamily="serif"
        android:gravity="center"
        android:padding="5dp"
        android:textStyle="bold"
        android:textColor="#000"
        android:textSize="14sp"/>
    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp">

    </ListView>

</LinearLayout>